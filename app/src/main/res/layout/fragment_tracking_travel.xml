<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uberpets.mobile.TrackingTravelFragment">

    <android.support.v7.widget.ContentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/places_text_white_alpha_87"
                android:text="@string/pets_are_on_way"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/places_text_white_alpha_87"
                    android:text="LLegarÃ¡n en "
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/time_expected_arrive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/places_text_white_alpha_87"
                    android:text="8 minutos"
                    android:textSize="20dp"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.ContentFrameLayout>

</FrameLayout>
